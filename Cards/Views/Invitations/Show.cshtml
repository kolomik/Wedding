@section scripts
{
    @if ( isHaveInvite )
    {
        <script>
            $(document).ready(function () {
                // set up click/tap panels
                $('.front, .back').click(function () {
                    $('.click').toggleClass('flip');
                });
            });
        </script>
    }

    <script>
        $(window).load(function () {
            $('.swing.panel').removeClass('hidden');
            //setTimeout(function () {
            //    $('.click').removeClass('hidden');
            //}, 3000);
        });
    </script>
}
