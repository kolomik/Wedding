@model Cards.Context.Models.Invitation

@{
    var isHaveInvite = Model != null;
    ViewBag.Title = isHaveInvite ? "Приглашение на свадьбу Евгения и Натальи" : "Свадьба Евгения и Натальи";
}

<div class="@(isHaveInvite?"click":"") swing panel hidden">
    <div class="front to-hide">
        <div class="nice-font right-side">
            <div class="invite">
                @if ( isHaveInvite )
                {
                    <span><span class="first-letter">П</span>риглашение на свадьбу</span>
                }
                else
                {
                    <span><span class="first-letter">С</span>вадьба</span>
                }
            </div>
            <div class="names">
                <div class="E">Евгения</div>
                <div class="amp">&amp;</div>
                <div class="N">Натальи</div>
            </div>
        </div>
    </div>
    @if ( isHaveInvite )
    {
        <div class="back to-hide">
        </div>

        <div class="content to-hide"></div>
    }
    <div class="revers">
        <h1>Свадьба Евгения и Натальи</h1>
        <h3>Пожалуйста, подождите...</h3>
    </div>
</div>


